@model List<Site>

@{
    ViewBag.Title = "Sites";
}

<h2>Sites</h2>

<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th>Domain Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var site in Model)
        {
            <tr>
                <td>@site.DomainName</td>
            </tr>
        }
        @if (!Model.Any())
        {
            <tr>
                <td>There are no sites.</td>
            </tr>
        }
    </tbody>
</table>